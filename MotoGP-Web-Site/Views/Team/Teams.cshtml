@using MotoGP_Web_Site.Database.EntityLayer.Concrete
@model List<Team>

@{
    ViewData["Title"] = "Takımlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper">
    <div class="row">
        <div class="col-xl-12 col-sm-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-responsive">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Resim</th>
                                    <th>Takım</th>
                                    <th>Rengi</th>
                                    <th>Üretici</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.TeamId</td>
                                        <td><img src="@item.TeamImage" width="60" class="img-responsive" /></td>
                                        <td>@item.TeamName </td>
                                        <td>@item.TeamColor </td>
                                        <td>@item.Manufacturer.ManuName </td>
                                        <td><a href="/Team/DeleteTeam?id=@item.TeamId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Team/UpdateTeam?id=@item.TeamId" class="btn btn-warning">Düzenle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <br />
                    <br />
                    <a href="/Team/AddTeam" class="btn btn-primary">Yeni Takım Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>


