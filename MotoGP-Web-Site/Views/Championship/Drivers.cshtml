@using MotoGP_Web_Site.Database.EntityLayer.Concrete
@model List<DriverChampionship>

@{
	int most = Model[0].Points;
    ViewData["Title"] = "Sürücüler Klasmanı";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<br />
<br />
<br />

<section class="results-w3ls">
	<div class="container">
		<h3 style="color: black;" class="text-center" data-aos="zoom-in">Sürücüler Klasmanı</h3>
		<table class="table table-responsive">
			<thead>
				<tr>
					<th><h4 style="color: black;">#</h4></th>
					<th><h4 style="color: black;">#</h4></th>
					<th><h4 style="color: black;">#</h4></th>
					<th><h4 style="color: black;">Sürücü - Takımı</h4></th>
					<th><h4 style="color: black;">#</h4></th>
					<th><h4 style="color: black;">#</h4></th>
				</tr>
			</thead>
			<tbody style="color: black;">
				@for(int i=0;i<Model.Count;i++)
				{
					<tr style="background: linear-gradient(90deg, @(Model[i].Team.TeamColor) 0%, rgb(255,255,255,1) 100%);">
						<td>@(i+1)</td>
						<td><img src="@Model[i].Driver.National.NationalImage" alt="@Model[i].Driver.National.NationalName" width="55" class="img-responsive"></td>
						<td>@Model[i].Driver.DriverNumber</td>
						<td>
							<div class="row">
								<div class="col-lg-6 col-12">
									<h4>@Model[i].Driver.Name.Substring(0,1) . @Model[i].Driver.Surname</h4>
								</div>
								<div class="col-lg-6 col-12">
									<h4>@Model[i].Team.TeamName</h4>
								</div>
							</div>
						</td>
						<td>@Model[i].Points</td>
						@if (most == Model[i].Points)
						{
							<td></td>
						}
						else
						{
							<td>-@(most - Model[i].Points)</td>
						}
					</tr>
				}
			</tbody>
		</table>
	</div>	
</section>