@using MotoGP_Web_Site.Database.EntityLayer.Concrete
@model List<News>

@{
    ViewData["Title"] = "Haberler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-xl-12 col-sm-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-responsive">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Resim</th>
                                    <th>Takım</th>
                                    <th>Rengi</th>
                                    <th>Üretici</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td><img src="@item.ImageUrl" width="60" class="img-responsive" /></td>
                                        <td>@item.Title </td>
                                        <td>@item.CreateDate </td>
                                        <td>@item.Label </td>
                                        <td><a href="/News/DeleteNews?id=@item.Id" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/News/UpdateNews?id=@item.Id" class="btn btn-warning">Düzenle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <br />
                    <br />
                    <a href="/News/AddNews" class="btn btn-primary">Yeni Haber Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>


