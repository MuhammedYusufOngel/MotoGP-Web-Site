@using MotoGP_Web_Site.Database.EntityLayer.Concrete
@model List<National>

@{
    ViewData["Title"] = "Ülkeler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="content-wrapper">
    <div class="row">
        <div class="col-xl-12 col-sm-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-responsive">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Resim</th>
                                    <th>Ülke</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.NationalId</td>
                                        <td><img src="@item.NationalImage" width="55" class="img-responsive" /> </td>
                                        <td>@item.NationalName </td>
                                        <td><a href="/National/DeleteNational?id=@item.NationalId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/National/UpdateNational?id=@item.NationalId" class="btn btn-warning">Düzenle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <br />
                    <br />
                    <a href="/National/AddNational" class="btn btn-primary">Yeni Ülke Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

