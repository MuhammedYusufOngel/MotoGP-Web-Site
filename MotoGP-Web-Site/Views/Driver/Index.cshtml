@using MotoGP_Web_Site.Database.EntityLayer.Concrete
@model List<Driver>

@{
    ViewData["Title"] = "Sürücüler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-xl-12 col-sm-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-responsive">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Milliyeti</th>
                                    <th>Sürücü</th>
                                    <th>Numarası</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.DriverId</td>
                                        <td><img src="@item.National.NationalImage" width="60" class="img-responsive" /></td>
                                        <td>@item.Name @item.Surname </td>
                                        <td>@item.DriverNumber </td>
                                        <td><a href="/Driver/DeleteDriver?id=@item.DriverId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Driver/UpdateDriver?id=@item.DriverId" class="btn btn-warning">Düzenle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <br />
                    <br />
                    <a href="/Driver/AddDriver" class="btn btn-primary">Yeni Sürücü Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

