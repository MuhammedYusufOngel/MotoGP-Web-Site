@using MotoGP_Web_Site.Database.EntityLayer.Concrete
@model List<DriverChampionship>

@{
    ViewData["Title"] = "Sürücüler Klasmanı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper">
    <div class="row">
        <div class="col-xl-12 col-sm-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-responsive">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Milliyeti</th>
                                    <th>Sürücü</th>
                                    <th>Takımı</th>
                                    <th>Puanı</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Year</td>
                                        <td><img src="@item.Driver.National.NationalImage" class="img-responsive"/></td>
                                        <td>@item.Driver.Name @item.Driver.Surname </td>
                                        <td>@item.Team.TeamName </td>
                                        <td>@item.Points </td>
                                        <td><a href="/DriverChamp/DeleteDriver?id=@item.DriverChampId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/DriverChamp/UpdateDriver?id=@item.DriverChampId" class="btn btn-warning">Düzenle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <br />
                    <br />
                    <a href="/DriverChamp/AddDriver?yearid=@ViewBag.year" class="btn btn-primary">Klasmana Sürücü Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>


