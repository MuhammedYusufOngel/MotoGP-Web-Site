@model MotoGP_Web_Site.Database.EntityLayer.Concrete.Result

@{
    ViewData["Title"] = "Sürücü Sonuçları Güncelleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper">
    <div class="row">
        <div class="col-xl-12 col-sm-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">

                    @using (Html.BeginForm("UpdateResult", "Result", FormMethod.Post))
                    {
                        @Html.Label("Id")
                        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = true})
                        <br />
                        <br />
                        @Html.Label("Seans-Pist Id")
                        @Html.TextBoxFor(x => x.SessionTrackId, new { @class = "form-control", @readonly = true})
                        <br />
                        <br />
                        @Html.Label("Sürücü")
                        @Html.DropDownListFor(x => x.DriverChampId,(List<SelectListItem>)ViewBag.d, new { @class = "form-control"})
                        <br />
                        <br />
                        @Html.Label("En Hızlı Tur")
                        @Html.TextBoxFor(x => x.Time, new { @class = "form-control"})
                        <br />
                        <br />
                        @Html.Label("Gap")
                        @Html.TextBoxFor(x => x.Gap, new { @class = "form-control"})
                        <br />
                        <br />
                        @Html.Label("Puan")
                        @Html.TextBoxFor(x => x.Points, new { @class = "form-control"})
                        <br />
                        <br />

                        <button type="submit" class="btn btn-primary submit mb-4">Sonucu Güncelle</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

